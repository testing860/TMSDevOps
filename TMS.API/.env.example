# =========================================================
# TMS (Task Management System) ~ Environment Configuration#
# =========================================================
# Copy this file to .env (in the same TMS.API folder) and fill in your own values.
# DO NOT commit the .env file with real secrets to source control.

# Database Configuration (SQL Server) #
DB_SERVER=localhost,1433
DB_NAME=TaskManagementSystem
DB_USER=sa
DB_PASSWORD=your_database_password_here

# JWT Authentication Settings #
JWT_KEY=your_jwt_secret_key_here_with_at_least_128_digits
JWT_ISSUER=TMSAPI
JWT_AUDIENCE=TMSWebClient

# Admin User for Automatic Seeding #
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your_password_here
ADMIN_DISPLAYNAME=Admin

# ASP.NET Core Runtime Settings #
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://0.0.0.0:5000
